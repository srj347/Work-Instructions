<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tagsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tags:"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tagsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter tags"
        android:inputType="text" />

    <RadioGroup
        android:id="@+id/instructionTypeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButtonWorkInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Instruction" />

        <RadioButton
            android:id="@+id/radioButtonSafetyInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safety Instructions" />

        <RadioButton
            android:id="@+id/radioButtonUsageManual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usage Manual" />
    </RadioGroup>

</LinearLayout>
